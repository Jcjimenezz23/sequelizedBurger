<div class="container">

	<div class="row">
		<h1>Eat The Burger </h1>
	</div>

<div class="row">
	
	<div class="col-xs-6 text-center">

		<div class="row">
			{{#each burgers}} 
			    {{#unless this.devoured}}
					<div class="col-xs-9 text-center">
						<pre>{{this.id}}. {{this.burger_name}}</pre>
					</div>

					<div class="col-xs-3 text-center">

						<form method="POST" action="/burgers/{{this.id}}?_method=PUT">

							<input type="hidden" name="burgerId" value={{this.id}}>
							<button type="submit" class="btn btn-default"> Devour it ! </button>
								
						</form>
							
					</div>
				{{/unless}}
			{{/each}}
		</div>

	</div>



	<div class="col-xs-6 text-center">

		{{#each burgers}}

			{{#if this.devoured}}

				<input type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>

			{{/if}}

		{{/each}}

	</div>

</div>
	


</div>

<div class="container">

	<div class="row">
		<div class="col-xs-12 text-center">

			<form action="/burgers/create" method="POST">

				<input type="text" name="burger_name" class="form-control" placeholder="Please Enter Your Burger" value="">

				<button type="submit" class="btn btn-primary">Submit</button>
				
			</form>
			
		</div>
	</div>



</div>